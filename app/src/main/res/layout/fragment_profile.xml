<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.ProfileFragment">

    <!-- Logo ImageView -->

    <!-- Greeting Box -->

    <!-- Username TextView -->

    <!-- Uploaded Contracts Label -->

    <!-- RecyclerView for Contracts -->

    <TextView
        android:id="@+id/HelloTextView"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/greeting_box_background"
        android:padding="5dp"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/contractsLabelTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.273"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="142dp"
        android:layout_height="62dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        android:text="Username Placeholder"
        android:textAlignment="center"
        android:textColor="@color/navy_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/HelloTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contractsLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Uploaded Contracts"
        android:textColor="@color/navy_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contractsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@color/light_blue"
        app:layout_constraintTop_toBottomOf="@id/contractsLabelTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="63dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toStartOf="@+id/HelloTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
