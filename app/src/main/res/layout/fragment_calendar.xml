<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.app.CalendarFragment">

    <!-- Custom Calendar View -->
    <com.example.app.CustomCalendarView
        android:id="@+id/customCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white" />

    <!-- Event Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_end"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saved Events"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:textColor="@color/navy_blue"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/eventsTextView"
                    android:layout_width="341dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="25dp"
                    android:text="Event Details"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/light_blue"
                    android:textSize="18sp" />
            </LinearLayout>
            <!--            <TextView-->
            <!--                android:id="@+id/eventsTextView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@color/white"-->
            <!--                android:padding="16dp"-->
            <!--                android:textColor="@color/navy_blue"-->
            <!--                android:textSize="18sp" />-->
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>